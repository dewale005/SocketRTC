{
  "env": {
    "node": true /* Enable Node.js global variables and scope */,
    "es2021": true /* Enable ECMAScript 2021 globals and syntax */
  },
  "extends": [
    "eslint:recommended" /* Use the recommended ESLint rules */,
    "plugin:@typescript-eslint/recommended" /* Use the recommended TypeScript-specific rules */,
    "prettier" /* Disable formatting-related ESLint rules that conflict with Prettier */,
    "plugin:prettier/recommended" /* Ensure Prettier and ESLint work together */
  ],
  "parser": "@typescript-eslint/parser" /* Use the TypeScript parser */,
  "parserOptions": {
    "ecmaVersion": 12 /* Use ECMAScript 2021 features */,
    "sourceType": "module" /* Allow the use of import/export syntax */,
    "project": "./tsconfig.json" /* Specify the path to your tsconfig.json file */
  },
  "plugins": [
    "@typescript-eslint" /* Use TypeScript plugin for TypeScript-specific linting */,
    "prettier" /* Use Prettier plugin to check for code formatting */
  ],
  "rules": {
    // TypeScript rules
    "@typescript-eslint/explicit-module-boundary-types": "off" /* Disable explicit return types for module functions */,
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ] /* Warn for unused variables but ignore those with leading underscore */,
    "@typescript-eslint/no-explicit-any": "warn" /* Warn when `any` is used */,

    // Prettier integration rules
    "prettier/prettier": "error" /* Report Prettier formatting issues as ESLint errors */,

    // General rules
    "no-console": "warn" /* Warn when console.log is used */,
    "no-unused-vars": "off" /* Disable unused-vars rule in ESLint, as itâ€™s covered by TypeScript */,
    "no-undef": "off" /* Disable 'no-undef' rule in ESLint, TypeScript takes care of it */,
    "consistent-return": "error" /* Ensure functions return consistently */,
    "eqeqeq": "warn" /* Warn when using loose equality (==) */
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"] /* Apply specific rules to TypeScript files */,
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off" /* Disable requiring return types for functions in TypeScript files */,
        "@typescript-eslint/no-empty-function": "warn" /* Warn for empty functions */
      }
    }
  ]
}
